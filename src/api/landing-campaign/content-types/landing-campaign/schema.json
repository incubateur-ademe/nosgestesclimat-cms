{
  "kind": "collectionType",
  "collectionName": "landing_campaigns",
  "info": {
    "singularName": "landing-campaign",
    "pluralName": "landing-campaigns",
    "displayName": "LandingCampaign"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "unique": true
    },
    "pollSlug": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "string",
      "unique": true,
      "required": true
    },
    "content": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "richtext",
      "required": true
    },
    "labelCTA": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files"],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "backgroundColor": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images", "files"],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "htmlContent": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "richtext"
    },
    "faq": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::faq.faq"
    }
  }
}
